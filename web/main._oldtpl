		html='<tr><td id="word'+word+'">'+data["words"][word]["word"]+'</td><td><input id="word'+word+'in" type="text" name="word'+word+'" size="50"></input><br/><div id="word'+word+'help" style="display:none">help</div></td><td>";
		html=html+"<input type="checkbox" id="check'+word+'" name="check'+word+'"></input> Cant translate. Reason: <input id="reason'+word+'" name="reason'+word+'" type="text"></input></td></tr>';
		//alert(html);
		
		$("#word_table").html($("#word_table").html()+html);


	}
	for (i=0;i<10;i++){
		add_wordhandler(i);

